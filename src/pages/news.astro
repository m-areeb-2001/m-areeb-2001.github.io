---
// src/pages/projects.astro
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import { news } from '../constant';
import Footer from '../layouts/Footer.astro';
/* -------------------------------------------------
   You can move this data to Markdown or a CMS later.
------------------------------------------------- */

---

<BaseLayout
  title="News | Muhammad Areeb"
  description="News by Muhammad Areeb."
>
  <section
    id="news"
    class="pt-20 mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 pb-24"
  >
    <h1 class="text-3xl font-bold">Projects</h1>

    <div class="mt-8 space-y-10">
        <h2 class="text-2xl font-semibold">News</h2>

        <ul class="mt-6 divide-y divide-gray-700/40">
          {news.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()).map(({ date, text }) => (
            <li class="flex flex-col gap-2 py-3 md:flex-row md:gap-6">
              <span class="w-32 shrink-0 font-mono text-sm text-gray-400">{date}</span>
              <span class="text-gray-100">{text}</span>
            </li>
          ))}
        </ul>
    </div>
  </section>
  <Footer />
</BaseLayout>
